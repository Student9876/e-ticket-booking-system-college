<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Booking</title>
    </head>
    <body>
        <h1>Booking</h1>
        <form action="/booking" method="POST">
            <div id="passenger-forms">
                <div class="passenger-form">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name[]" required>
                    <label for="age">Age:</label>
                    <input type="number" id="age" name="age[]" required>
                    <label for="phone">Phone:</label>
                    <input type="tel" id="phone" name="phone[]" required>
                </div>
            </div>

            <button type="button" id="add-passenger-btn">+</button>

            <button type="submit">Proceed</button>
        </form>

        <script>
        document.getElementById('add-passenger-btn').addEventListener('click', function() {
            const passengerForms = document.getElementById('passenger-forms');
            const newPassengerForm = document.querySelector('.passenger-form').cloneNode(true);
            passengerForms.appendChild(newPassengerForm);
        });
    </script>
    </body>
</html>
