<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booking</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <h1>Booking</h1>
    <form id="booking-form" action="/book" method="POST">
        <div id="passengers">
            <div class="passenger">
                <label for="name1">Name:</label>
                <input type="text" id="name1" name="name[]" required>
                <label for="age1">Age:</label>
                <input type="number" id="age1" name="age[]" required>
            </div>
        </div>
        <button type="button" id="add-passenger">+</button>
        <label for="tickets">Number of Tickets:</label>
        <input type="number" id="tickets" name="tickets" value="1" min="1" required>
        <input type="hidden" id="selected-class" name="class" value="<%= class %>">
        <input type="hidden" id="train-no" name="train_no" value="<%= train_no %>">
        <button type="submit">Book</button>
    </form>

    <script>
        document.getElementById('add-passenger').addEventListener('click', function() {
            var passengers = document.getElementById('passengers');
            var passengerCount = passengers.getElementsByClassName('passenger').length + 1;

            var newPassenger = document.createElement('div');
            newPassenger.classList.add('passenger');
            newPassenger.innerHTML = `
                <label for="name${passengerCount}">Name:</label>
                <input type="text" id="name${passengerCount}" name="name[]" required>
                <label for="age${passengerCount}">Age:</label>
                <input type="number" id="age${passengerCount}" name="age[]" required>
            `;
            passengers.appendChild(newPassenger);
        });
    </script>
</body>
</html>
